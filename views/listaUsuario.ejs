<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h1 class="fw-bold mb-0 fs-2">Buscar Usuário</h1>
      </div>
      <div class="modal-body p-5 pt-0" id="divForm">
        <form id="form" onsubmit="buscaUsuario(event)">
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control rounded-3"
              id="user-id"
              name="id"
              required
              placeholder="ID do Usuário"
            />
            <label>ID do Usuário</label>
          </div>
          <div class="divErro" role="alert"></div>
          <div style="display: flex; flex-direction: row; justify-content: space-around; margin-top: 2em;">
            <button class="btn btn-outline-dark btn-md" type="submit">
              Buscar
            </button>
          </div>
        </form>
        <div id="resultadoBusca" style="margin-top: 2em; display: none;">
          <p><strong>Nome:</strong> <span id="resultado-nome"></span></p>
          <p>
            <strong>Tipo:</strong>
            <span id="resultado-tipo"> 
              <button id="btn-tipo-down" class="btn btn-outline-secondary btn-sm" onclick="alterarTipo('down')">-</button>
              <span id="tipo-text">Operador</span>
              <button id="btn-tipo-up" class="btn btn-outline-secondary btn-sm" onclick="alterarTipo('up')">+</button>
            </span>
          </p>
          <div style="display: flex; flex-direction: row; justify-content: space-between; margin-top: 2em;">
            <button class="btn btn-outline-dark btn-md" onclick="removeUsuario()">Remover</button>
            <button class="btn btn-outline-dark btn-md" onclick="alterarUsuario()">Alterar</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
