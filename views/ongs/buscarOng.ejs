<div class="container-fluid container-fluid-custom pb-5 mb-5">

  <div class="row">
    <% if(searchResults !='' ) { %>
      <% searchResults.forEach(function (ong, index) { %>

        <a href="/ongs/<%= ong._id %>">
          <h4><%= ong.nome_org %></h4>
        </a>
        <p class="card-text"><%= ong.area %></p>
        <p class="card-text">
          <strong>Contato:</strong> <%= ong.contato %>
        </p>

        <% }) %>
          <% } else { %>
            <p>Nenhuma ONG foi encontrada.</p>
            <% } %>

  </div>
</div>